<Window x:Class="DummyWPF.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DummyWPF"
        mc:Ignorable="d"
        Title="wndMain" Height="474" Width="826">
    <Grid Margin="0,0,-17,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="336.035"/>
            <RowDefinition Height="53.005"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="459"/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="3" Margin="0,0,0,4">
            <MenuItem Header="Search for Invoice" Click="MenuItem_Click"></MenuItem>
            <MenuItem x:Name="mnSearchforItems" Header="Edit Items" Height="23" Click="mnSearchforItems_Click"></MenuItem>
        </Menu>
        <Label Content="Inovice Number:" Margin="0,1,0,0" VerticalAlignment="Top" Height="26" HorizontalAlignment="Center" Width="97" Grid.Row="1"/>
        <Label x:Name="txtInvoiceNumber" Content="TBD" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="179" Grid.Row="1"/>
        <Label Content="Invoice Date: " Margin="0,28,10,0" VerticalAlignment="Top" Grid.Row="1" Height="26" HorizontalAlignment="Right" Width="80"/>
        <Calendar x:Name="dateSelector" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" Height="168" Width="179" UseLayoutRounding="True"/>
        <Label Content="Item Description:" HorizontalAlignment="Center" Margin="0,202,0,0" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="100"/>
        <ComboBox x:Name="cboItemDesc" HorizontalAlignment="Left" Margin="10,204,0,0" VerticalAlignment="Top" Width="161" Grid.Row="1" Grid.Column="1" Height="22" SelectionChanged="cboItemDesc_SelectionChanged"/>
        <Label Content="Item Cost:" Margin="0,233,10,0" VerticalAlignment="Top" Grid.Row="1" Height="26" HorizontalAlignment="Right" Width="63"/>
        <TextBox x:Name="txtItemCost" HorizontalAlignment="Left" Margin="10,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" AutomationProperties.HelpText="$100.00" Height="22" Grid.Row="1" Grid.Column="1" IsReadOnly="True" IsEnabled="False"/>
        <Button x:Name="btnAddItem" Content="Add Item to Invoice" HorizontalAlignment="Left" Margin="10,264,0,0" VerticalAlignment="Top" Width="161" Height="23" Grid.Row="1" Grid.Column="1" Click="btnAddItem_Click"/>
        <Button x:Name="btnDeleteItem" Content="Delete Item from Invoice" HorizontalAlignment="Left" Margin="10,292,0,0" VerticalAlignment="Top" Height="23" Width="161" Grid.Row="1" Grid.Column="1" Click="btnDeleteItem_Click"/>
        <DataGrid x:Name="InvoicesList" Margin="2,2,10,32" Grid.Column="2" Grid.Row="1" MinColumnWidth="3" SelectionChanged="InvoicesList_SelectionChanged">
            <DataGrid.Columns>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnSave" Content="Save/Update Current Invoice" HorizontalAlignment="Left" Margin="2,1,0,1" Width="297" Grid.Column="2" Grid.Row="2" Click="btnSave_Click"/>
        <Button x:Name="btnDelete" Content="Delete Current Invoice" HorizontalAlignment="Left" Margin="304,1,0,1" Width="146" Grid.Column="2" Grid.Row="2" Click="btnDelete_Click"/>
        <Label x:Name="lblInvoiceTotal" Grid.Column="2" Content="Total: $0.00" HorizontalAlignment="Left" Margin="304,306,0,0" Grid.Row="1" VerticalAlignment="Top" Width="145" HorizontalContentAlignment="Right" FontWeight="Bold"/>
    </Grid>
</Window>
